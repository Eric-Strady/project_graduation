{% extends 'base.html.twig' %}

{% block title %}AMAP Pré-vert{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

{% block body %}
	<header class="container-fluid">
		<div class="row text-center" id="fullSizeHeader">
			<div class="col-lg-12 mt-auto mb-auto">
				<h1>AMAP Pré-vert</h1>
				<a href="#contracts" class="btn btn-primary anchor"><span>Découvrir</span></a>
			</div>
		</div>
	</header>

	<section class="container-fluid" id="contracts">
		<h2>Les contrats</h2>
		<div class="container mt-5">
				<div class="row justify-content-center text-center" id="contractsName">
				{% for contract in contracts %}
					<div class="col-lg-2 col-md-4 mb-2">
						<button class="btn">Contrat {{ contract.name }}</button>
					</div>
				{% endfor %}
			</div>
		</div>
		{% for key, contract in contracts %}
			<div class="row justify-content-center mt-5 contractSummary" id="{{ key }}">
				<div class="col-lg-6 col-md-12 text-justify align-self-center summary">
					<div class="row justify-content-center">
						<div class="col-lg-10">
							<h3>Contrat {{ contract.name }}</h3>
							<p>{{ contract.summary }}</p>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12 text-center mb-2">
							<a class="btn btn-primary" href="{{ path('contract.show', {id: contract.id}) }}">En savoir plus</a>
						</div>
					</div>
				</div>
				<div class="col-lg-4 col-md-12 text-center mb-2 contractThumbnail">
					{% if contract.imageName %}
						<img src="{{ vich_uploader_asset(contract, 'image_file') | imagine_filter('medium') }}" alt="Image contrat {{ contract.name }}">
					{% else %}
						<img src="{{ asset('images/vegetables_basket.jpg' | imagine_filter('medium')) }}" alt="Panier de légumes">
					{% endif %}
				</div>
			</div>
		{% endfor %}
	</section>

	<section id="simulatorBanner">
		<div class="container pt-5 pb-5">
			<div class="row text-center">
				<div class="col-lg-6">
					<h3>Découvrez notre simulateur !</h3>
					<p>Vous ne savez pas quels contrats vous conviendrez le mieux?</p>
				</div>
				<div class="col-lg-6 align-self-center">
					<a href="{{ path('simulator') }}" class="btn btn-primary">Réaliser une simulation</a>
				</div>
			</div>
		</div>
	</section>

	<section class="container-fluid" id="lastPostsContainer">
		<div class="container" id="lastPosts">
			<h2>Les dernières actualités</h2>
			<div class="row mt-5">
				{% for post in lastPosts %}
					{{ include('front/posts_thumbnail.html.twig') }}
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}

{% block javascripts %}
	<script type="text/javascript">
		$(function() {
			$('.anchor').click(function(e) {
		        if (this.hash !== "")
		        {
		            var hash = this.hash;
		            $('html, body').animate({scrollTop: $(hash).offset().top}, 800, function(){
		            window.location.hash = hash;
		            });
		            e.preventDefault();
		        }
		    });
		});
	</script>
	<script type="text/javascript" src="{{ asset('js/homePage/Contracts.js') }}"></script>
{% endblock %}