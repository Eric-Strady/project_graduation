{% extends 'base.html.twig' %}

{% block title %}AMAP Pr√©-vert - Simulateur{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/simulator.css') }}">
{% endblock %}

{% block body %}
	<header class="container">
		<div class="row text-center">
			<div class="col-lg-12">
				<h2>Simulateur</h2>
			</div>
		</div>
	</header>

	<section class="container mt-4 mb-4" id="firstStep">
		<div class="row">
			<div class="col-lg-12">
				<h3>Etape 1/2</h3>
			</div>
		</div>
		{{ form_start(form) }}
		<div class="row justify-content-center">
			<div class="col-lg-10 ">
				<div class="mb-2" id="nbAdultError"></div>
				{{ form_row(form.nb_adult) }}
			</div>
			<div class="col-lg-10">
				<div class="mb-2" id="nbChildError"></div>
				{{ form_row(form.nb_child) }}
			</div>
			<div class="col-lg-10">
				<div class="mb-2" id="foodTypeError"></div>
				{{ form_row(form.food_type) }}
			</div>
		</div>
		<div class="row text-center mt-3">
			<div class="col-lg-12">
				<button class="btn btn-primary" id="nextStep">Suivant</button>
			</div>
		</div>
	</section>

	<section class="container mt-4 mb-4" id="secondStep">
		<div class="row">
			<div class="col-lg-12">
				<h3>Etape 2/2</h3>
			</div>
		</div>
		{% for contract in contracts %}
			<div class="row justify-content-center contract">
				<div class="col-lg-12">
					<h5>Contrat {{ contract.name }}:</h5>
				</div>
				<div class="col-lg-12">
					<div class="row products">
						{% for product in contract.products %}
							<div class="col-lg-4 productChoice">
								<input type="checkbox" name="{{ product.id }}" value="{{ product.id }}" id="{{ product.name }}">
								<label for="{{ product.name }}">
									{{ product.name }}
								</label>
								<div class="foodTypes">
									{% for foodType in product.foodTypes %}
										<span>{{ foodType.name }}</span>
									{% endfor %}
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		{% endfor %}
		
		<div class="row text-center mt-3">
			<div class="col-lg-12">
				<button class="btn btn-primary" id="simulate">Simuler</button>
			</div>
		</div>
	</section>

	<section class="container mt-4 mb-4" id="result">
		<div class="row">
			<div class="col-lg-2">
				<p>{{ form_row(form.total_price) }}</p>
			</div>
			<div class="col-lg-12 text-center mt-3">
				<button class="btn btn-primary" id="submit">Prendre contact</button>
			</div>
		</div>
		{{ form_end(form) }}
	</section>


{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="{{ asset('js/simulatorPage/Simulator.js') }}"></script>
{% endblock %}