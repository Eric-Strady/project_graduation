{% extends 'base.html.twig' %}

{% block title %}AMAP Pr√©-vert - Simulateur{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/simulator.css') }}">
{% endblock %}

{% block body %}
	<header class="container">
		<div class="row text-center">
			<div class="col-lg-12">
				<h2>Simulateur</h2>
			</div>
		</div>
	</header>

	<section class="container mt-4 mb-4" id="firstStep">
		<div class="row">
			<div class="col-lg-12">
				<h3>Etape 1/2</h3>
			</div>
		</div>
		{{ form_start(form) }}
		<div class="row justify-content-center">
			<div class="col-lg-10 ">
				{{ form_row(form.nb_adult) }}
			</div>
			<div class="col-lg-10">
				{{ form_row(form.nb_child) }}
			</div>
			<div class="col-lg-10">
				{{ form_row(form.food_type) }}
			</div>
		</div>
		<div class="row text-center">
			<div class="col-lg-12">
				<button class="btn btn-primary">Suivant</button>
			</div>
		</div>
	</section>

	<section class="container mt-4 mb-4" id="secondStep">
		<div class="row">
			<div class="col-lg-12">
				<h3>Etape 2/2</h3>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-lg-10 ">
				{{ form_row(form.contract) }}
			</div>
		</div>
		<div class="row text-center">
			<div class="col-lg-12">
				<button class="btn btn-primary">Simuler</button>
			</div>
		</div>
	</section>

	<section class="container mt-4 mb-4" id="result">
		<div class="row">
			<div class="col-lg-2">
				<p>{{ form_row(form.total_price) }}</p>
			</div>
			<div class="col-lg-12 text-center">
				<button class="btn btn-primary">Prendre contact</button>
			</div>
		</div>
		{{ form_end(form) }}
	</section>


{% endblock %}

{% block javascripts %}
{% endblock %}