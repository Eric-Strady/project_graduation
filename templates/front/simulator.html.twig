{% extends 'base.html.twig' %}

{% block title %}AMAP Pré-vert - Simulateur{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/simulator.css') }}">
{% endblock %}

{% block body %}
	<header class="container">
		<div class="row text-center">
			<div class="col-lg-12">
				<h2>Simulateur</h2>
			</div>
		</div>
	</header>

	<section class="container mt-4 mb-4" id="firstStep">
		<div class="row">
			<div class="col-lg-12">
				<h3>Etape 1/2</h3>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-lg-10 ">
				<p>Label nombre d'adultes: champ nb adultes</p>
			</div>
			<div class="col-lg-10">
				<p>Label nombre d'enfants: champ nb enfants</p>
			</div>
			<div class="col-lg-10">
				<p>Label type d'alimentation: champ type alim</p>
			</div>
		</div>
		<div class="row text-center">
			<div class="col-lg-12">
				<button class="btn btn-primary">Suivant</button>
			</div>
		</div>
	</section>

	<section class="container mt-4 mb-4" id="secondStep">
		<div class="row">
			<div class="col-lg-12">
				<h3>Etape 2/2</h3>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-lg-10 ">
				<div class="row">
					<div class="col-lg-12">
						<p>Contrat ...</p>
					</div>
					<div class="col-lg-6">
						<p>Produit 1 (avec possibilité de cocher le produit)</p>
					</div>
					<div class="col-lg-6">
						<p>Produit 2 (avec possibilité de cocher le produit)</p>
					</div>
					<div class="col-lg-6">
						<p>Produit 3 (avec possibilité de cocher le produit)</p>
					</div>
				</div>
			</div>
			<div class="col-lg-10 ">
				<div class="row">
					<div class="col-lg-12">
						<p>Contrat ...</p>
					</div>
					<div class="col-lg-6">
						<p>Produit 1 (avec possibilité de cocher le produit)</p>
					</div>
					<div class="col-lg-6">
						<p>Produit 2 (avec possibilité de cocher le produit)</p>
					</div>
					<div class="col-lg-6">
						<p>Produit 3 (avec possibilité de cocher le produit)</p>
					</div>
				</div>
			</div>
		</div>
		<div class="row text-center">
			<div class="col-lg-12">
				<button class="btn btn-primary">Simuler</button>
			</div>
		</div>
	</section>

	<section class="container mt-4 mb-4" id="result">
		<div class="row">
			<div class="col-lg-12">
				<p>Prix total: (prix généré grâce au simulateur) €</p>
			</div>
			<div class="col-lg-12 text-center">
				<button class="btn btn-primary">Prendre contact</button>
			</div>
		</div>
	</section>


{% endblock %}

{% block javascripts %}
{% endblock %}