{% extends 'base.html.twig' %}

{% block title %}AMAP Pré-vert - Article{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/post.css') }}">
{% endblock %}

{% block body %}
	<header class="container">
		<div class="row text-center">
			<div class="col-lg-12">
				<h2>{{ post.title }}</h2>
				<p>{{ post.category.name }}</p>
			</div>
			<div class="col-lg-12 mt-5">
				{% if post.imageName %}
					<img src="{{ asset('images/posts/'~ post.imageName ~'') }}" alt="Image article {{ post.Title }}" id="postImage">
				{% else %}
					<img src="{{ asset('images/vegetables_basket.jpg') }}" alt="Panier de légumes" id="postImage">
				{% endif %}
			</div>
		</div>
	</header>

	<section class="container">
		<div class="row">
			<div class="col">
				<p>Publié le {{ post.createdAt|date("d/m/Y")}} {% if post.updatedAt is not null %} - Mis à jour le: {{ post.updatedAt|date("d/m/Y")}}{% endif %}</p>
			</div>
		</div>
		<div class="row">
			<div class="col">
				<p>{{ post.content }}</p>
			</div>
		</div>
	</section>
{% endblock %}

{% block javascripts %}
{% endblock %}