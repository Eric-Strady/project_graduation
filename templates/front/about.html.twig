{% extends 'base.html.twig' %}

{% block title %}AMAP Pré-vert - A propos{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/about.css') }}">
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.4.0/dist/leaflet.css" integrity="sha512-puBpdR0798OZvTTbP4A8Ix/l+A4dHDD0DGqYW6RQ+9jxkRFclaxxQb/SJAWZfWAkuyeQUytO7+7N4QKrDh+drA==" crossorigin=""/>
{% endblock %}

{% block body %}
	<div class="container">
		<header>
			<div class="row text-center">
				<div class="col-lg-12">
					<h2>A propos de l'AMAP Pré-vert</h2>
				</div>
				<div class="col-lg-12 mt-5">
					<img src="{{ asset('images/vegetables_basket.jpg') }}" alt="Panier de légumes" id="aboutImage">
				</div>
			</div>
		</header>

		<section class="mt-4 mb-4" id="aboutUs">
			<div class="row">
				<div class="col-lg-12 text-center">
					<h3>Qui sommes-nous?</h3>
				</div>
				<div class="col-lg-12 text-justify">
					<p>{{ about.description|raw }}</p>
				</div>
			</div>
		</section>
	</div>

	<section class="container-fluid mt-4 mb-4" id="keyNumbers">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h3>L'AMAP Pré-vert en quelques chiffres</h3>
			</div>
		</div>
		<div class="row text-center">
			<div class="col-lg-3 mt-4 mb-4">
				<span>{{ nbContracts }}</span>
				<p>Contrats</p>
			</div>
			<div class="col-lg-3 mt-4 mb-4">
				<span>{{ about.nbMembers }}</span>
				<p>Membres</p>
			</div>
			<div class="col-lg-3 mt-4 mb-4">
				<span>{{ years_diff(about.createdAt) }}</span>
				<p>Années d'existance</p>
			</div>
			<div class="col-lg-3 mt-4 mb-4">
				<span>{{ about.annualMembershipFee }} €</span>
				<p>Adhésion annuelle</p>
			</div>
		</div>
	</section>

	<section class="container mt-4 mb-4" id="joinUs">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h3>Comment nous rejoindre?</h3>
			</div>
			<div class="col-lg-12 text-justify">
				<p>{{ about.howJoinUs|raw }}</p>
			</div>
		</div>
	</section>

	<section class="container-fluid mt-4 mb-4" id="links">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h3>En apprendre plus</h3>
			</div>
		</div>
		<div class="row text-center">
			<div class="col-lg-4 mt-4 mb-4">
				<span>icône fontawesome</span>
				<a href="#">AMAP IDF</a>
			</div>
			<div class="col-lg-4 mt-4 mb-4">
				<span>icône fontawesome</span>
				<a href="#">Page Facebook</a>
			</div>
			<div class="col-lg-4 mt-4 mb-4">
				<span>icône fontawesome</span>
				<a href="{{ path('contact') }}">Page de contact</a>
			</div>
		</div>
	</section>

	<div id="map"></div>
{% endblock %}

{% block javascripts %}
	<script type="text/javascript">
		let latitude = {{ about.amapGpsLat }};
		let longitude = {{ about.amapGpsLng }};
		let markerTitle = "AMAP Pré-vert";
	</script>
	{% include 'map/openStreetMap.html.twig' %}
{% endblock %}