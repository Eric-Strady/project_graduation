{% extends 'base.html.twig' %}

{% block title %}AMAP Pré-vert - A propos{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/about.css') }}">
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.4.0/dist/leaflet.css" integrity="sha512-puBpdR0798OZvTTbP4A8Ix/l+A4dHDD0DGqYW6RQ+9jxkRFclaxxQb/SJAWZfWAkuyeQUytO7+7N4QKrDh+drA==" crossorigin=""/>
{% endblock %}

{% block body %}
	<div class="container">
		<header>
			<div class="row text-center">
				<div class="col-lg-12">
					<h2>A propos de l'AMAP</h2>
				</div>
				<div class="col-lg-12 mt-5">
					<img src="{{ asset('images/vegetables_basket.jpg' | imagine_filter('large')) }}" alt="Panier de légumes" id="aboutImage">
				</div>
			</div>
		</header>

		<section class="mt-4 mb-4 pt-4" id="aboutUs">
			<div class="row">
				<div class="col-lg-12 text-center">
					<h3>Qui sommes-nous?</h3>
				</div>
				<div class="col-lg-12">
					<p>{{ about.description|raw }}</p>
				</div>
			</div>
		</section>
	</div>

	<section class="container-fluid mt-4 mb-4 pt-4" id="keyNumbers">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h3>L'AMAP en quelques chiffres</h3>
			</div>
		</div>
		<div class="row text-center">
			<div class="col-lg-3 col-md-3 mt-4 mb-4">
				<span>{{ nbContracts }}</span>
				<p>Contrats</p>
			</div>
			<div class="col-lg-3 col-md-3 mt-4 mb-4">
				<span>{{ about.nbMembers }}</span>
				<p>Membres</p>
			</div>
			<div class="col-lg-3 col-md-3 mt-4 mb-4">
				<span>{{ years_diff(about.createdAt) }}</span>
				<p>Années d'existance</p>
			</div>
			<div class="col-lg-3 col-md-3 mt-4 mb-4">
				<span>{{ about.annualMembershipFee }} €</span>
				<p>Adhésion annuelle</p>
			</div>
		</div>
	</section>

	<section class="container mt-4 mb-4 pt-4" id="joinUs">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h3>Comment nous rejoindre?</h3>
			</div>
			<div class="col-lg-12">
				<p>{{ about.howJoinUs|raw }}</p>
			</div>
		</div>
	</section>

	<section class="container-fluid mt-4 pt-4" id="links">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h3>En apprendre plus</h3>
			</div>
		</div>
		<div class="row text-center">
			<div class="col-lg-4 col-md-4 mt-4 mb-4">
				<a href="http://amap-idf.org/"><span class="fas fa-mouse-pointer fa-2x"></span></a>
				<p>AMAP IDF</p>
			</div>
			<div class="col-lg-4 col-md-4 mt-4 mb-4">
				<a href="{{ about.facebookLink }}"><span class="fab fa-facebook-f fa-2x"></span></a>
				<p>Page Facebook</p>
			</div>
			<div class="col-lg-4 col-md-4 mt-4 mb-4">
				<a href="{{ path('contact') }}"><span class="far fa-envelope fa-2x"></span></a>
				<p>Page de contact</p>
			</div>
		</div>
	</section>

	<div id="map"></div>
{% endblock %}

{% block javascripts %}
	<script type="text/javascript">
		let latitude = {{ about.amapGpsLat }};
		let longitude = {{ about.amapGpsLng }};
		let markerTitle = "AMAP Pré-vert";
	</script>
	{% include 'map/openStreetMap.html.twig' %}
{% endblock %}