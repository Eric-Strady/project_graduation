{% extends 'base.html.twig' %}

{% block title %}AMAP Pré-vert - A propos{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/contact.css') }}">
{% endblock %}

{% block body %}

	<header class="container">
		<div class="row text-center">
			<div class="col-lg-12">
				<h2>Nous contacter</h2>
			</div>
		</div>
	</header>

	<section class="container mt-4">
		<div class="row justify-content-center">
			<div class="col-lg-8" id="contactArea">
				<div class="row" id="contactForm">
					<div class="col-lg-12">
						<p>Label adresse e-mail</p>
						<p>Champ adresse e-mail</p>
					</div>
					<div class="col-lg-12">
						<p>Label objet</p>
						<p>Champ objet</p>
					</div>
					<div class="col-lg-12">
						<p>Label message</p>
						<p>Champ message</p>
					</div>
				</div>
				<div class="row" id="calculateCaptcha">
					<div class="col-lg-12">
						<p><span id="firstNumber">2</span> + <span id="secondNumber">4</span> = <input type="text" name="result"></p>
					</div>
				</div>
				<div class="row" id="sendButton">
					<div class="col-lg-12 text-center">
						<button class="btn btn-primary">Envoyer</button>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}

{% block footer %}
	<footer class="footer mt-3 mb-3 fixed-bottom">
		<div class="container text-center">
			<span class="text-muted">&copy; AMAP Pré-vert</span>
		</div>
	</footer>
{% endblock %}

{% block javascripts %}
{% endblock %}