{% extends 'base.html.twig' %}

{% block title %}AMAP Pré-vert - A propos{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/contact.css') }}">
{% endblock %}

{% block body %}
	<div class="container">
		<header>
			<div class="row text-center">
				<div class="col-lg-12">
					<h2>Nous contacter</h2>
				</div>
			</div>
		</header>

		<section class="mt-5">
			<div class="row justify-content-center">
				<div class="col-lg-8">
					{% for message in app.flashes('success') %}
			            <div class="alert alert-success text-center">
			                {{ message }}
			            </div>
			        {% endfor %}
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-lg-8" id="contactArea">
					<div class="row" id="contactForm">
						<div class="col-lg-12">
							{{ form_start(form) }}
								{{ form_errors(form) }}
								{{ form_row(form.user_email) }}
								{{ form_row(form.subject) }}
								{{ form_row(form.message) }}
								{{ form_rest(form) }}
								<div class="text-center">
									<div class="g-recaptcha" data-sitekey=""></div>
								</div>
								<div class="row text-center">
									<div class="col-lg-12">
										<button type="submit" class="btn btn-primary">Envoyer</button>
									</div>
								</div>
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
{% endblock %}

{% block footer %}
	<footer class="footer mt-3 mb-3 fixed-bottom">
		<div class="container text-center">
			<span class="text-muted">&copy; AMAP Pré-vert</span>
		</div>
	</footer>
{% endblock %}

{% block javascripts %}
{% endblock %}