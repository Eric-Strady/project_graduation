{% extends 'base.html.twig' %}

{% block title %}AMAP Pr√©-vert - Notre blog{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/posts.css') }}">
{% endblock %}

{% block body %}
	<header class="container">
		<div class="row text-center">
			<div class="col-lg-12">
				<h2>Notre blog</h2>
			</div>
		</div>
	</header>

	<section class="container mt-4 mb-4" id="filters">
		{{ form_start(form) }}
			<div class="form-row justify-content-center">
				<div class="col">
					{{ form_row(form.date) }}
				</div>
				<div class="col">
					{{ form_row(form.post_categories) }}
				</div>
				<div class="col">
					<button class="btn btn-primary">Filtrer</button>
				</div>
			</div>
		{{ form_end(form) }}
	</section>

	<section class="container" id="postsSection">
		<div class="row">
			{% for post in posts %}
				{{ include('front/posts_thumbnail.html.twig') }}
			{% endfor %}
		</div>
		<div class="row justify-content-center mt-4 mb-4" id="pagination">
			{{ knp_pagination_render(posts) }}
		</div>
	</section>

{% endblock %}

{% block javascripts %}
{% endblock %}