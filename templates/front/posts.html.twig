{% extends 'base.html.twig' %}

{% block title %}AMAP Pré-vert - Notre blog{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/posts.css') }}">
{% endblock %}

{% block body %}
	<header class="container">
		<div class="row text-center">
			<div class="col-lg-12">
				<h2>Notre blog</h2>
			</div>
		</div>
	</header>

	<section class="container mt-4 mb-4" id="filters">
		<div class="row justify-content-center align-items-center text-center">
			<div class="col-lg-2">
				<p>Label année</p>
			</div>
			<div class="col-lg-2">
				<p>Champ année</p>
			</div>
			<div class="col-lg-2">
				<p>Label tag</p>
			</div>
			<div class="col-lg-2">
				<p>Champ tag</p>
			</div>
			<div class="col-lg-2">
				<button class="btn btn-primary">Filtrer</button>
			</div>
		</div>
	</section>

	<section class="container" id="postsSection">
		<div class="row">
			{% for post in posts %}
				<div class="col-lg-4 text-center mt-4">
					<div class="card">
						<img class="card-img-top" src="..." alt="{{ post.imageTitle }}">
						<div class="card-body">
							<h5 class="card-title">{{ post.title }}</h5>
							<p>Publié le {{ post.createdAt|date("d/m/Y") }}</p>
						</div>
						<div class="card-footer text-center">
		      				<a href="{{ path('article.show', {id: post.id}) }}" class="btn btn-primary">Lire la suite</a>
		      			</div>
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="row justify-content-center mt-4 mb-4" id="pagination">
			<p>Pagination</p>
		</div>
	</section>

{% endblock %}

{% block javascripts %}
{% endblock %}