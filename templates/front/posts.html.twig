{% extends 'base.html.twig' %}

{% block title %}AMAP Pr√©-vert - Notre blog{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/posts.css') }}">
{% endblock %}

{% block body %}
<div class="container">
	<header>
		<div class="row text-center">
			<div class="col-lg-12">
				<h2>Notre blog</h2>
			</div>
		</div>
	</header>

	<section class="mt-4 mb-4 pt-3" id="filters">
		{{ form_start(form) }}
			<div class="form-row align-items-end">
				<div class="col ml-2 mr-2">
					{{ form_row(form.year) }}
				</div>
				<div class="col ml-2 mr-2">
					{{ form_row(form.post_categories) }}
				</div>
				<div class="col-lg-2 text-center">
					<div class="form-group">
						<button class="btn btn-primary">Filtrer</button>
					</div>
				</div>
			</div>
		{{ form_end(form) }}
	</section>

	<section id="postsSection">
		<div class="row">
			{% for post in posts %}
				{{ include('front/posts_thumbnail.html.twig') }}
			{% endfor %}
		</div>
		<div class="row justify-content-center mt-4 mb-4" id="pagination">
			{{ knp_pagination_render(posts) }}
		</div>
	</section>
</div>

{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="{{ asset('js/postFilter.js') }}"></script>
{% endblock %}