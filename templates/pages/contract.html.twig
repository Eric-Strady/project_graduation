{% extends 'base.html.twig' %}

{% block title %}AMAP Pré-vert - Contrat{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/contracts.css') }}">
{% endblock %}

{% block body %}
	<header class="container">
		<div class="row text-center">
			<div class="col-lg-12">
				<h2>Contrat {{ contract.name }}</h2>
			</div>
			<div class="col-lg-12 mt-5">
				<img src="{{ asset('images/vegetables_basket.jpg') }}" alt="Panier de légumes" id="contractImage">
			</div>
		</div>
	</header>

	<section class="container" id="contractDescription">
		<div class="row">
			<div class="col">
				<p>Du {{ contract.startingSeasonAt|date("d/m/Y")}} au {{ contract.endingSeasonAt|date("d/m/Y")}}</p>
			</div>
		</div>
		<div class="row">
			<div class="col" id="description">
				<p>{{ contract.description }}</p>
			</div>
		</div>
		<div class="row">
			<div class="col">
				<p>Liste des produits du contrat:</p>
			</div>
		</div>
	</section>

	<section class="container" id="growerData">
		<div class="row justify-content-around text-center">
			<div class="col-lg-5">
				<p>Carte avec coordonnées GPS du producteur</p>
			</div>
			<div class="col-lg-5">
				<p>Informations sur le producteur</p>
			</div>
		</div>
	</section>
{% endblock %}

{% block javascripts %}
{% endblock %}