{{ form_start(form) }}
	<fieldset>
		<legend>Détails du producteur</legend>
		{{ form_row(form.name) }}
		<div class="row">
			<div class="col-lg-6">{{ form_row(form.address) }}</div>
			<div class="col-lg-4">{{ form_row(form.city) }}</div>
			<div class="col-lg-2">{{ form_row(form.postal_code) }}</div>
		</div>
		<div class="row">
			<div class="col-lg-6">{{ form_row(form.gps_lat) }}</div>
			<div class="col-lg-6">{{ form_row(form.gps_lng) }}</div>
		</div>
	</fieldset>

	<fieldset>
		<legend>Données facultatives</legend>
		<div class="row">
			<div class="col-lg-4">{{ form_row(form.phone) }}</div>
			<div class="col-lg-4">{{ form_row(form.email) }}</div>
			<div class="col-lg-4">{{ form_row(form.website) }}</div>
		</div>
	</fieldset>
	
	<div class="row mt-4">
		<div class="col-lg-12 text-center">
			<button type="submit" class="btn btn-primary">{{ button }}</button>
		</div>
	</div>
{{ form_end(form )}}