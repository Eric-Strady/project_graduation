{% extends 'base.html.twig' %}

{% block title %}AMAP Pré-vert - Modification du contrat{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/admin_main.css') }}">
	<link rel="stylesheet" href="{{ asset('css/admin_forms.css') }}">
{% endblock %}

{% block nav %}
	{% include 'back/admin_nav.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container">
		<header class="container">
			<div class="row text-center">
				<div class="col-lg-12">
					<h2>Modification du contrat</h2>
				</div>
			</div>
		</header>

		<div class="row mb-2">
			<div class="col text-right returnButton">
				<a href="{{ path('admin.contracts') }}" class="btn btn-outline-secondary btn-sm">Retour à la gestion des contrats</a>
			</div>
		</div>

		<section id="updateForm">
			{% include 'back/admin_contract_form.html.twig' with { button: 'Modifier' } %}
		</section>
	</div>
	

{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="{{ asset('js/adminPage/ContractForm.js') }}"></script>
	<script type="text/javascript">
		let selector = "#contract_description";
	</script>
	{% include 'back/admin_tinymce_script.html.twig' %}
{% endblock %}