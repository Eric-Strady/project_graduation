			<div class="col-lg-6">{{ form_row(form.name) }}</div>
			<div class="col-lg-6">{{ form_row(form.image_file) }}</div>
		</div>
		<div class="row">
			<div class="col-lg-6">{{ form_row(form.starting_season_at) }}</div>
