{% extends 'base.html.twig' %}

{% block title %}AMAP Pr√©-Vert - Gestion du compte{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/admin_main.css') }}">
	<link rel="stylesheet" type="text/css" href="{{ asset('css/admin_forms.css') }}">
{% endblock %}

{% block nav %}
	{% include 'back/admin_nav.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container">
		<header>
			<div class="row text-center">
				<div class="col-lg-12">
					<h2>Changer l'identifiant</h2>
				</div>
			</div>
		</header>

		<section class="spaceAround">
			<div class="row justify-content-center">
				<div class="col-lg-6">
					{{ form_start(formResetEmail) }}
						{{ form_errors(formResetEmail) }}
						{{ form_row(formResetEmail.new_email) }}
						{{ form_row(formResetEmail.old_password) }}
						<div class="row submitButton">
							<div class="col-lg-12 text-center">
								<button type="submit" class="btn btn-warning btn-lg">Modifier</button>
							</div>
						</div>
					{{ form_end(formResetEmail)}}
				</div>
			</div>		
		</section>
	</div>
{% endblock %}

{% block javascripts %}
{% endblock %}