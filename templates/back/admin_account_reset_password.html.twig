{% extends 'base.html.twig' %}

{% block title %}AMAP Pré-vert - Gestion du compte{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block nav %}
	{% include 'back/admin_nav.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container">
		<header>
			<div class="row text-center">
				<div class="col-lg-12">
					<h2>Changer le mot de passe</h2>
				</div>
			</div>
		</header>

		<section class="mt-5" id="accountUpdate">
			<div class="row justify-content-center">
				<div class="col-lg-6">
					{{ form_start(formResetPassword) }}
						{{ form_errors(formResetPassword) }}
						{{ form_row(formResetPassword.old_password) }}
						{{ form_row(formResetPassword.new_password) }}
						{{ form_row(formResetPassword.new_confirm_password) }}
						<div class="row mt-4">
							<div class="col-lg-12 text-center">
								<button type="submit" class="btn btn-warning">Modifier</button>
							</div>
						</div>
					{{ form_end(formResetPassword)}}
				</div>
			</div>		
		</section>
	</div>
{% endblock %}

{% block footer %}
    <footer class="footer mt-3 mb-3 fixed-bottom">
        <div class="container text-center">
            <span class="text-muted">&copy; AMAP Pré-vert</span>
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
{% endblock %}