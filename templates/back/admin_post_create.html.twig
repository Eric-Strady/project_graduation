{% extends 'base.html.twig' %}

{% block title %}AMAP Pré-vert - Création d'un article{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/admin_main.css') }}">
{% endblock %}

{% block nav %}
	{% include 'back/admin_nav.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container">
		<header class="container">
			<div class="row text-center">
				<div class="col-lg-12">
					<h2>Création d'un article</h2>
				</div>
			</div>
		</header>

		<div class="row mb-2">
			<div class="col text-right returnButton">
				<a href="{{ path('admin.posts') }}" class="btn btn-outline-secondary btn-sm">Retour à la gestion des articles</a>
			</div>
		</div>

		<section id="createForm">
			{% include 'back/admin_post_form.html.twig' with { button: 'Créer' } %}
		</section>
	</div>
	

{% endblock %}

{% block javascripts %}
	<script type="text/javascript">
		let selector = "#post_content";
	</script>
	{% include 'back/admin_tinymce_script.html.twig' %}
{% endblock %}