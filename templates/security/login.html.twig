{% extends 'base.html.twig' %}

{% block title %}AMAP Pré-vert - Connexion{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <div class="container">
        <header>
            <div class="row text-center">
                <div class="col-lg-12">
                    <h2>Connexion</h2>
                </div>
            </div>
        </header>

        <section class="mt-5 mb-5" id="login">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-lg-12">
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}

                            {% if error %}
                                <div class="alert alert-danger">
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}
                            <form method="POST">
                                <div class="form-group">
                                    <label for="email">Identifiant:</label>
                                    <input class="form-control" type="text" id="email" name="email" value="{{ last_username }}" autofocus/>
                                </div>
                                <div class="form-group">
                                    <label for="password">Mot de passe:</label>
                                    <input class="form-control" type="password" id="password" name="password"/>
                                </div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <a href="{{ path('forgot.password') }}">Mot de passe oublié</a>
                                <div class="text-center">
                                    <div class="g-recaptcha" data-sitekey=""></div>
                                </div>
                                <div class="row text-center">
                                    <div class="col-lg-12 text-center">
                                        <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}